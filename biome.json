{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"files": {
		"includes": ["**", "!**/.next", "!**/node_modules", "!**/.vercel", "!**/package.json", "!**/.mypy_cache"]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		},
		"globals": ["React"],
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"complexity": {
				"noStaticOnlyClass": "off",
				"useLiteralKeys": "off"
			},
			"style": {
				"noParameterProperties": "off"
			},
			"suspicious": {
				"noEmptyBlockStatements": "off"
			}
		}
	}
}
