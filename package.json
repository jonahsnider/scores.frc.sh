{
	"name": "scores.frc.sh",
	"private": true,
	"workspaces": [
		"apps/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"format": "turbo run //#format:root format",
		"format:root": "prettier --check .",
		"format:root:write": "prettier --check . --write",
		"format:write": "turbo run //#format:root:write format:fix",
		"generate-icons": "pwa-assets-generator",
		"lint": "turbo run //#lint:root lint",
		"lint:fix": "turbo run //#lint:root:fix lint:fix",
		"lint:root": "biome check .",
		"lint:root:fix": "biome check . --write --unsafe",
		"migrate:apply": "turbo run migrate:apply",
		"migrate:create": "turbo run migrate:create",
		"start": "turbo run start",
		"test": "turbo run //#lint:root //#format:root lint format build type-check",
		"type-check": "turbo run type-check"
	},
	"dependencies": {
		"envalid": "8.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@vite-pwa/assets-generator": "1.0.2",
		"prettier": "3.7.4",
		"prettier-plugin-packagejson": "2.5.20",
		"sharp": "0.34.5",
		"turbo": "2.6.1",
		"vercel": "48.12.1"
	},
	"packageManager": "bun@1.2.12",
	"trustedDependencies": [
		"@biomejs/biome"
	]
}
