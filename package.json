{
	"name": "scores.frc.sh",
	"private": true,
	"workspaces": [
		"apps/*"
	],
	"scripts": {
		"build": "turbo run build",
		"format": "prettier --check .",
		"format:write": "bun run format --write",
		"generate-icons": "pwa-assets-generator",
		"lint": "biome check .",
		"lint:fix": "biome check . --write --unsafe",
		"migrate": "drizzle-kit migrate",
		"migrate:create": "drizzle-kit generate:pg",
		"test": "bun run lint && bun run format && turbo run build type-check",
		"type-check": "turbo run type-check"
	},
	"dependencies": {
		"envalid": "8.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@vite-pwa/assets-generator": "1.0.0",
		"drizzle-kit": "0.31.1",
		"prettier": "3.5.3",
		"prettier-plugin-packagejson": "2.5.11",
		"sharp": "0.34.1",
		"turbo": "2.5.3",
		"vercel": "41.7.3"
	},
	"packageManager": "bun@1.2.1",
	"trustedDependencies": [
		"@biomejs/biome"
	]
}
